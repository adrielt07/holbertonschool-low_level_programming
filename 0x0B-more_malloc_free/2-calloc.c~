#include "holberton.h"
#include "stdlib.h"

/**
 * _calloc - allocate mem of an array
 * @nmemb: number of elements array
 * @size: size of data
 */

void *_calloc(unsigned int nmemb, unsigned int size)
{
	int *p;
	unsigned int c;

	if (nmemb == 0 || size == 0)
		return (NULL);

	p = malloc(size * nmemb);
	if (p == NULL)
		return (NULL);


	while (c < nmemb)
	{
		p[c] = 0;
		c++;
	}
	return (p);
}
